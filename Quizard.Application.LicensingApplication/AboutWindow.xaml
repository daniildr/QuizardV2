<Window x:Class="Quizard.Application.LicensingApplication.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе — Quizard"
        Height="280"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Border Padding="20" Background="White" CornerRadius="8" BorderBrush="#CCC" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Column="0"
                   Source="pack://application:,,,/Resources/logo.png"
                   Width="180"
                   Height="180"
                   Margin="0,0,20,0"/>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Quizard"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#333"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="Утилита администратора"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="#555"/>
                </StackPanel>
                
                <TextBlock x:Name="VerTextBlock"
                           FontSize="14"
                           Foreground="#666"/>
                
                <TextBlock Text="Quizard Team © All rights reserved"
                           FontSize="14"
                           Foreground="#666"
                           Margin="0,4,0,0"/>
                <TextBlock Text="Обратная связь: https://t.me/DavidN_sky"
                           FontSize="14"
                           Foreground="#666"
                           Margin="0,4,0,0"/>

                
                <Button Content="Закрыть"
                        Width="80"
                        Height="28"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>